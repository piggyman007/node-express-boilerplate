{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Coverage",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/istanbul/lib/cli.js",
      "stopOnEntry": false,
      "args": [
        "cover",
        "node_modules/mocha/bin/_mocha",
        "--",
        "test/"
      ],
      "runtimeArgs": [
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "local"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/my-express-api/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/my-express-api/src/libs/validator.test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "App",
      "program": "${workspaceRoot}/src/bin/www",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "dev",
        "LOG_LEVEL": "debug",
        "PORT": "3000"
      }
      // "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v8.2.1/bin/node"
    }
  ]
}